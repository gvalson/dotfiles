alias update="sudo apt update && sudo apt upgrade -y"
alias i3conf="vim ~/.config/i3/config"
alias ssp="sudo pm-suspend"
alias inst="sudo apt install"
alias sht="shutdown now"
alias visualize="padsp synaesthesia line"
alias slsk="cd Downloads/Install_files/ && ./Soulseek*"
alias wall="wal -n -g -i"
alias sync-pc="rsync -aP ~/megidola_sync/ eponymous-patcher@megidola.local:blazepad_sync"
alias unlock="udisksctl unlock -b /dev/sdb && udisksctl mount --block-device /dev/disk/by-label/Grandeur"
